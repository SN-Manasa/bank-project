
public class Bank {
private double balance;
private double minimum amount;

public bank()
{
balance = 1000;
minimum amount = 2000;
}

public void deposit(amount){
balance = balance + amount; 
}

public void withdraw(amount){
balance = balance - amount;
}

public class user
{
public static void main(String [] args) 
{ 
Bank b = new Bank();
b.deposit();
b.withdraw();
system.out.println("balance after money deposited by user");
system.out.println("balance after money withdrawn by user");
}
}
